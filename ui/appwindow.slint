import { Button, VerticalBox , HorizontalBox , TextEdit } from "std-widgets.slint";



export component AppWindow inherits Window {
    title: "Easy Config Wizard";
    preferred-width: 700px;
    preferred-height: 500px;
    background: #4d4d4d;
    in-out property <int> currentView: 1;
    callback button1-pressed<=>button1.clicked;
    callback button2-pressed<=>button2.clicked;
    callback button3-pressed<=>button3.clicked;
    callback button4-pressed<=>button4.clicked;
    callback button5-pressed<=>button4.clicked;
    HorizontalLayout {
        Rectangle {
            width: 200px;
            VerticalBox {
                spacing: 10px;
                Text {
                    text: "Easy Config Wizard";
                    font-size: 20px;
                    color: #ffffff;
                }

                button1 := Button {
                    property <string> name: "Rust Docs";
                    height: 50px;
                    text: "View 1";
                }

                button2 := Button {
                    height: 50px;
                    text: "View 2";
                }

                button3 := Button {
                    height: 50px;
                    text: "View 3";
                }

                button4 := Button {
                    height: 50px;
                    text: "View 4";
                }

                button5 := Button {
                    height: 50px;
                    text: "Documentation";
                }
            }
        }

        Rectangle {
            if (currentView == 1): 
            VerticalBox {
                Text {
                    text: "View 1";
                    color: #ffffff;
                }

                Button {
                    text: "Random Button";
                    height: 50px;
                }
            }

            if (currentView == 2): 
            VerticalBox {
                Text {
                    text: "View 2";
                    color: #ffffff;
                }

                Button {
                    text: "Random Button";
                    height: 50px;
                }

                Rectangle{
                    background: #ffffff;
                TextEdit {
                    font-size: 14px;
                    text: "Lorem ipsum dolor sit amet,\n consectetur adipisici elit";
                }
                }
            }

            if (currentView == 3): 
            VerticalBox {
                Text {
                    text: "View 3";
                    color: #ffffff;
                }

                Button {
                    text: "Random Button";
                    height: 50px;
                }
            }
        }
    }
}
